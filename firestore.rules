rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Relief locations collection
    match /relief-locations/{locationId} {
      // Anyone can read relief locations (public access)
      allow read: if true;
      
      // Authenticated users can create locations
      allow create: if request.auth != null &&
                       request.resource.data.createdBy == request.auth.uid &&
                       request.resource.data.name is string &&
                       request.resource.data.coords is list &&
                       request.resource.data.urgencyLevel in ['critical', 'urgent', 'moderate'];
      
      // Users can only delete their own locations
      allow delete: if request.auth != null &&
                       resource.data.createdBy == request.auth.uid;
      
      // Users can only update their own locations
      allow update: if request.auth != null &&
                       resource.data.createdBy == request.auth.uid &&
                       request.resource.data.createdBy == resource.data.createdBy;
    }
  }
}
